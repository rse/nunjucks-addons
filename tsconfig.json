{
    "compilerOptions": {
        "target":                           "ES2024",
        "module":                           "node20",
        "lib":                              [ "ES2024" ],
        "moduleResolution":                 "node16",
        "resolveJsonModule":                true,
        "allowSyntheticDefaultImports":     true,
        "esModuleInterop":                  true,
        "forceConsistentCasingInFileNames": true,
        "strict":                           true,
        "skipLibCheck":                     true,
        "declaration":                      true,
        "outDir":                           "dst",
        "rootDir":                          ".",
        "types":                            [ "node" ]
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
